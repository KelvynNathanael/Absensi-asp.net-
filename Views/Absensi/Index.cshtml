@model List<Dictionary<string, object>>

<table  style="border-collapse: collapse; width: 100%; border: 1px solid black;">
    <thead>
        <tr>
            <th style="border: 1px solid black; padding: 8px;">NIK</th>
            <th style="border: 1px solid black; padding: 8px;">Nama</th>
            <th style="border: 1px solid black; padding: 8px;">Tanggal Absen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td style="border: 1px solid black; padding: 8px;">@row["Nik"]</td>
                <td style="border: 1px solid black; padding: 8px;">@row["Name"]</td>
                <td style="border: 1px solid black; padding: 8px;"  >@Convert.ToDateTime(row["TanggalAbsen"]).ToString("dd-MM-yyyy")</td>
            </tr>
        }
    </tbody>
</table>
